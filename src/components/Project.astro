---
import "../styles/global.css";
import ndaruData from "../data/ndaru.json";
const projects = ndaruData.data.projects;
---

<section class="cv-section" id="projects">
    <h3 class="section-title">Notable Projects</h3>
    <div class="projects-list">
        {
            projects.map((project) => (
                <div class="project-item">
                    <div class="project-header">
                        <h4 class="project-name">{project.name}</h4>
                        {project.repository.type === "github" && (
                            <a
                                href={"http://" + project.repository.display}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="project-link">
                                <div class="project-link">
                                    <svg class="icon" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                                    </svg>
                                    <span>{project.repository.display}</span>
                                </div>
                            </a>
                        )}
                    </div>
                    <p class="project-description">{project.description}</p>
                    <p class="project-technologies">
                        <strong>Technologies Used:</strong> {project.technologies.map((tech) => tech.name).join(" â€¢ ")}
                    </p>
                </div>
            ))
        }
    </div>
</section>

<style>
    .projects-list {
        display: block;
    }

    .project-item {
        margin-bottom: 30px;
        padding-bottom: 25px;
        border-bottom: 1px solid #cecfcf;
    }

    .project-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 20px;
        margin-bottom: 10px;
    }

    .project-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
        flex: 1;
    }

    .project-description {
        color: #4a5568;
        line-height: 1.6;
        margin: 0 0 10px 0;
        font-size: 0.95rem;
    }

    .project-technologies {
        color: #4a5568;
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .project-technologies strong {
        color: #2c3e50;
    }

    .project-link {
        display: flex;
        align-items: center;
        gap: 6px;
        color: #2c3e50;
        font-size: 0.85rem;
        font-weight: 500;
        white-space: nowrap;
        text-decoration: none;
    }

    .icon {
        width: 16px;
        height: 16px;
        color: #2c3e50;
    }

    @media (max-width: 768px) {
        .project-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 8px;
        }

        .project-link {
            align-self: flex-start;
        }
    }

    @media print {
        .cv-section {
            break-inside: avoid;
        }

        .project-item {
            break-inside: avoid;
        }
    }
</style>
